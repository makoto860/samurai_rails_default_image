<h1>予約一覧</h1>
<% @rents.each do |rent| %>
  <table class="show-table">
    <tr>
      <th>名前</th>
      <td><%= rent.product.name %></td>
    </tr>

    <tr>
      <th>画像</th>
      <td>
        <% if rent.product.image.attached? %>
          <%= image_tag rent.product.image, size: '50x50' %>
        <% else %>
          <%= image_tag rent.asset_path('default.png'), size: '50x50' %>
        <% end %>
      </td>
    </tr>

    <tr>
      <th>開始日</th>
      <td><%= rent.start_date.to_formatted_s(:datetime_jp) %></td>
    </tr>
    <tr>
      <th>終了日</th>
      <td><%= rent.end_date.to_formatted_s(:datetime_jp) %></td>
    </tr>
    <tr>
      <th>予約した日にち</th>
      <td><%= rent.created_at.to_formatted_s(:datetime_jp) %></td>
    </tr>
    <p>--------------------------------------------------</p>
  </table>
<% end %>
