<h1>Products#edit</h1>
<p>Find me in app/views/products/edit.html.erb</p>
<h1>product編集</h1>
<%= form_with model: @product do |f| %>
<table>
  <tr>
    <th><%= f.label :name, "名前" %></th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th><%= f.label :image, "画像" %></th>
    <td><%= f.file_field :image %></td>
  </tr>
</table>
<div>
  <ul>
    <li><%= f.submit "編集を完了する" %></li>
    <li><%= link_to "product一覧に戻る", :products %></li>
  </ul>
</div>
<% end %>
